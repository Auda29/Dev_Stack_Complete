# Dev_Stack Development Image
# Base image for all AI agent containers

FROM ubuntu:24.04

# Prevent interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=UTC

# Install base tools and Git
RUN apt-get update && apt-get install -y \
    git \
    curl \
    wget \
    vim \
    nano \
    ca-certificates \
    gnupg \
    lsb-release \
    build-essential \
    software-properties-common \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js (LTS)
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/*

# Install Python 3 and basic tools
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-venv \
    && rm -rf /var/lib/apt/lists/*

# Install common linters and formatters
RUN pip3 install flake8 black chromadb --break-system-packages


# Install Go - uncomment if needed
# RUN wget https://go.dev/dl/go1.21.5.linux-amd64.tar.gz \
#     && tar -C /usr/local -xzf go1.21.5.linux-amd64.tar.gz \
#     && rm go1.21.5.linux-amd64.tar.gz
# ENV PATH=$PATH:/usr/local/go/bin

# Install Rust - uncomment if needed
# RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
# ENV PATH="/root/.cargo/bin:${PATH}"

# Configure Git
RUN git config --global init.defaultBranch main \
    && git config --global user.email "agent@devstack.local" \
    && git config --global user.name "DevStack Agent" \
    && git config --global core.autocrlf input \
    && git config --global pull.rebase true

# Set working directory
WORKDIR /repo

# Create entrypoint script
COPY docker/entrypoint.sh /usr/local/bin/entrypoint.sh
RUN apt-get update && apt-get install -y dos2unix && dos2unix /usr/local/bin/entrypoint.sh && chmod +x /usr/local/bin/entrypoint.sh

# Create a non-root user
RUN useradd -m -s /bin/bash devstack \
    && chown -R devstack:devstack /repo

# Copy listener script
COPY scripts/agent_listener.py /usr/local/bin/agent_listener.py
RUN chmod +x /usr/local/bin/agent_listener.py

# Switch to non-root user
USER devstack

# Default command (keeps container running)
ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]
CMD ["tail", "-f", "/dev/null"]

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD git --version || exit 1
